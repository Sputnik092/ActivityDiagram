<UserControl x:Class="ActivityDiagram.View.Shapes.RectangleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActivityDiagram.View.Shapes"
             mc:Ignorable="d" 
             Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" Width="{Binding Width}" Height="{Binding Height}" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
         <StackPanel x:Name="stack">
        <TextBlock Text="{Binding ElementName=stack, Path=InvalidPath}" />
    </StackPanel>
        <Line Stroke="Red" StrokeThickness="5" X1="0" Y1="{Binding Height}" X2="{Binding Width}" Y2="{Binding Height}" />
        <Rectangle Stroke="Black" StrokeThickness="4">
            <!-- Needs mouse interaction code -->
        </Rectangle>
    </Grid>
</UserControl>
