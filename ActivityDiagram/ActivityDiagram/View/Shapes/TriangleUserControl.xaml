<UserControl x:Class="ActivityDiagram.View.Shapes.TriangleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActivityDiagram.View.Shapes"
             mc:Ignorable="d" 
             Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" 
             d:DesignHeight="{Binding Height}" d:DesignWidth="{Binding Width}">
    <Grid>
            <Polygon Points="100,100 0,100 50,0" Stroke="Black" StrokeThickness="4">
            <!-- Code needed for mouse interaction -->
        </Polygon>
    </Grid>
</UserControl>
